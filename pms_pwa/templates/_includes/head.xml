<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="website_roomdoo_scss"
        inherit_id="website.assets_frontend"
        priority="1"
    >
        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/pms_pwa/static/src/scss/o_pms_pwa_custom.scss"
            />
            <link
                rel="stylesheet"
                type="text/scss"
                href="/pms_pwa/static/src/scss/o_pms_pwa_reservation_list.scss"
            />
            <link
                rel="stylesheet"
                type="text/scss"
                href="/pms_pwa/static/src/scss/o_pms_pwa_reservation_detail.scss"
            />
            <link
                rel="stylesheet"
                type="text/scss"
                href="/pms_pwa/static/src/scss/o_pms_pwa_calendar.scss"
            />
        </xpath>
    </template>
    <template id="website_roomdoo_js" inherit_id="website.assets_frontend">
        <!--Add custom scripts-->
        <xpath expr="script[last()]" position="after">
            <script
                type="text/javascript"
                src="//unpkg.com/infinite-scroll@3/dist/infinite-scroll.pkgd.min.js"
            />
            <script
                type="text/javascript"
                src="/pms_pwa/static/src/js/o_pms_pwa_reservation_list_paginator.js"
            />
            <script
                type="text/javascript"
                src="/pms_pwa/static/src/js/o_pms_pwa_reservation_table_filter.js"
            />
            <script
                type="text/javascript"
                src="/pms_pwa/static/src/js/o_pms_pwa_reservation_detail_rb.js"
            />
            <script
                type="text/javascript"
                src="/pms_pwa/static/src/js/o_pms_pwa_calendar.js"
            />
        </xpath>
    </template>
</odoo>
