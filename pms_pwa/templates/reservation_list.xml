<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="pms_reservation_list" name="Lista de reservas">
        <t t-call="website.layout">
            <t t-set="title">Mis reservas</t>
            <h2>Mis reservas</h2>

            <input type="text" id="searchInput" onkeyup="searchingFunction()" placeholder="Buscador" title="Buscador...">
            <table id="reservationListTable">
                <tr class="header">
                    <th>Huesped</th>
                    <th>ID</th>
                    <th>Tipo habitación</th>
                    <th>nº hab</th>
                    <th>check in</th>
                    <th>check out</th>
                    <th>canal venta</th>
                    <th>total (€)</th>
                    <th>pend (€)</th>
                    <th>Observ/Extras</th>
                    <th></th>
                </tr>
                <t t-foreach="clients" t-as="client">
                <tr>
                    <td><t t-esc="client"/></td>
                    <td>254</td>
                    <td>HVM hb vistas al mar</td>
                    <td>2</td>
                    <td>10/07/2020 20:00</td>
                    <td>11/07/2020 12:00</td>
                    <td>Booking</td>
                    <td>120</td>
                    <td>120 Cobrar</td>
                    <td>Desayuno incluido</td>
                    <td>Check in</td>
                </tr>
                </t>
            </table>
        </t>
    </template>

</odoo>