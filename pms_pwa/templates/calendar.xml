<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="roomdoo_calendar_page" name="Calendar">
        <t t-call="website.layout">
            <div class="oe_structure">
                <section class="container-fluid o_pms_pwa_roomdoo">
                    <!-- Calendar -->
                    <div class="calendar shadow bg-white p-5">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-calendar fa-3x mr-3" />
                            <h2
                                class="month font-weight-bold mb-0 text-uppercase"
                            >Noviembre 2020</h2>
                        </div>
                        <p
                            class="font-italic text-muted mb-5"
                        >No events for this day.</p>
                        <div class="row  day-names">
                            <div class="col align-self-end">Habitaciones</div>
                            <t t-foreach="date_list" t-as="day">
                                <div class="col">
                                    <t t-esc="day.strftime('%A %d')" />
                                </div>
                            </t>
                        </div>
                        <t t-foreach="rooms_list" t-as="obj">
                            <div class="row days">
                                <div class="col align-self-end">
                                    <t
                                        t-if="obj.product_id.name"
                                        t-esc="obj.product_id.name"
                                    />
                                </div>
                                <!--<
                                <t t-foreach="obj['list_days']" t-as="day">
                                    <div class="col">
                                        <div class="price">
                                            <t t-if="day['day']" t-esc="day['day']"/>
                                            <t t-if="day['precio']" t-esc="day['precio']"/>
                                        </div>
                                        <div class="event bg-success">Event with Long Name</div>
                                    </div>
                                </t>-->
                            </div>
                        </t>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
